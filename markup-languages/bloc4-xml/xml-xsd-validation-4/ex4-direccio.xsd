<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="direccions"> <!-- Element arrel -->
    <xs:complexType>
      <xs:sequence> <!-- Obrim sequence perque si no dona error el xsd -->
        <xs:element name="direccio">
          <xs:simpleType>
            <xs:restriction base="xs:string"> <!-- Tipus de dada -->
              <xs:whiteSpace value="replace"/> <!-- Afegit replace per complir -->
            </xs:restriction>
          </xs:simpleType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>